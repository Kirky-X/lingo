# Template Environment Variables Configuration
# 
# Copy this file to .env and modify the values according to your environment

# Application Configuration
APP_NAME="Template Example App"
APP_VERSION="0.2.0"
ENVIRONMENT="development"

# Server Configuration
HOST="127.0.0.1"
PORT=8080
MAX_CONNECTIONS=1000
TIMEOUT=30
SSL_ENABLED=false

# Database Configuration
DATABASE_HOST="localhost"
DATABASE_PORT=5432
DATABASE_DATABASE="myapp"
DATABASE_USERNAME="postgres"
DATABASE_PASSWORD="password"
DATABASE_POOL_SIZE=10
DATABASE_TIMEOUT=30
DATABASE_SSL_ENABLED=false

# Redis Configuration
REDIS_URL="redis://localhost:6379"
REDIS_POOL_SIZE=10
REDIS_TIMEOUT=5
REDIS_CLUSTER_ENABLED=false

# Logging Configuration
LOGGING_LEVEL="info"
LOGGING_FORMAT="text"
LOGGING_TARGETS="stdout"

# Security Configuration
SECURITY_JWT_SECRET="your-secret-key-here"
SECURITY_JWT_EXPIRATION=3600
SECURITY_CORS_ORIGINS="http://localhost:3000"
SECURITY_CSRF_ENABLED=true

# Encryption Configuration
SECURITY_ENCRYPTION_ALGORITHM="AES-256-GCM"
SECURITY_ENCRYPTION_KEY_SIZE=256
SECURITY_ENCRYPTION_ITERATIONS=100000

# Monitoring Configuration
MONITORING_HEALTH_CHECK_PATH="/health"
MONITORING_METRICS_PATH="/metrics"

# Tracing Configuration
MONITORING_TRACING_ENDPOINT="http://localhost:14268/api/traces"
MONITORING_TRACING_SAMPLING_RATE=0.1
MONITORING_TRACING_SERVICE_NAME="template-example"
